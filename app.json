{
  "expo": {
    "name": "MarZlog",
    "slug": "marzlog",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "marzlog",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FA5252"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.marzlog.app",
      "usesAppleSignIn": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "사진을 업로드하기 위해 사진 라이브러리 접근이 필요합니다.",
        "NSCameraUsageDescription": "사진을 촬영하기 위해 카메라 접근이 필요합니다."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FA5252"
      },
      "package": "com.marzlog.app",
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png",
      "name": "MarZlog - AI 사진 관리",
      "shortName": "MarZlog",
      "description": "AI 기반 스마트 사진 관리 앱",
      "themeColor": "#FA5252",
      "backgroundColor": "#FFFFFF"
    },
    "plugins": [
      "expo-router",
      "expo-apple-authentication",
      "expo-secure-store",
      [
        "expo-image-picker",
        {
          "photosPermission": "사진을 업로드하기 위해 사진 라이브러리 접근이 필요합니다.",
          "cameraPermission": "사진을 촬영하기 위해 카메라 접근이 필요합니다."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "c8da7472-a27b-474e-8d01-cb39f50e5de7"
      }
    },
    "owner": "marzlogs-organization"
  }
}
